<Window x:Class="DropZone.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DropZone.Views"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="Settings" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WindowsFormsHost>
            <wf:PropertyGrid x:Name="propertyGrid"></wf:PropertyGrid>
        </WindowsFormsHost>
        <StackPanel Grid.Row="1" Margin="10">
            <Button HorizontalAlignment="Right" Click="btnClose_OnClick">
                <TextBlock Padding="20,0,20,0">Close</TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Window>
