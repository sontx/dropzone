<Window
    x:Class="DropZone.Views.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DropZone.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About"
    Width="400"
    Height="400"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    Topmost="True"
    mc:Ignorable="d">
    <Grid>
        <Image
            VerticalAlignment="Bottom"
            Opacity="0.4"
            Source="/Images/author.jpg"
            Stretch="UniformToFill" />
        <Grid Margin="10">
            <TextBlock FontSize="13">
                This is the author =))<LineBreak />
                Wanna say thanks, buy him a <Hyperlink NavigateUri="https://www.facebook.com/sontx.dev/" RequestNavigate="link_OnRequestNavigate">cup of coffee ;)</Hyperlink>
            </TextBlock>
            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="13">
                <Hyperlink NavigateUri="https://sontx.dev/" RequestNavigate="link_OnRequestNavigate">sontx.dev</Hyperlink>
            </TextBlock>
        </Grid>
    </Grid>
</Window>